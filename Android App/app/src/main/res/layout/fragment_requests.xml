<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="stuurboi.com.e_coders.stuurboi.stuurboi.Fragment.RequestsFragment"
    android:background="@drawable/stuurboi2">


    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Service Requests"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_directions_car_black_24dp"
        android:drawablePadding="20dp"
        android:padding="20dp"
        android:layout_gravity="start"
        android:textAlignment="textStart"/>


    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_trips_view">

    <!-- TODO: Update blank fragment layout -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="367dp"
            android:layout_height="439dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:scrollbars="vertical" />

    </RelativeLayout>
    <!-- Added an empty view which will be shown when the EmptyRecyclerView
            is empty -->
    <!-- Added an empty view which will be shown when the EmptyRecyclerView
         is empty -->
    <LinearLayout
        android:id="@+id/todo_list_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="center"
        android:background="@drawable/round_layout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="You Have No Requests Currently"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
